#include <stdio.h>

int main() {
  int arr[100], size=5, i, element, pos;

  // Initialize array
  arr[0] = 10;
  arr[1] = 20; 
  arr[2] = 30;
  arr[3] = 40;
  arr[4] = 50;

  // Print original array
  printf("Original Array: ");
  for(i=0; i<size; i++) {
    printf("%d ", arr[i]);
  }

  // Take input for element and position
  printf("\nEnter element  to delete: ");
  scanf("%d ", &element);

    for(i=0;i<size;i++){
        if(i!= element){
            printf(" %d ", arr[i]);
        }
    }
  
  // Print updated array
  printf("\nUpdated Array: ");
  for(i=0; i<size; i++) {
    printf("%d ", arr[i]);
  }

  return 0;
}
